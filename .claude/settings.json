{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsc --noEmit --pretty 2>&1 | head -20",
            "timeout": 30,
            "statusMessage": "Type-checking after edit..."
          }
        ]
      }
    ]
  }
}
